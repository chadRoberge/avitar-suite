{{#if @isOpen}}
  {{!-- Trigger zone tracking --}}
  {{this.zoneTracker}}
  <div class="avitar-modal-overlay avitar-modal-overlay--visible" {{on "click" @onClose}}>
    <div class="avitar-modal avitar-modal--md" {{on "click" this.stopPropagation}}>
      <div class="avitar-modal__header">
        <h2 class="avitar-modal__title">{{if @zone.id "Edit Zone" "Create Zone"}}</h2>
        <button type="button" class="avitar-modal__close" {{on "click" @onClose}}>
          <i class="fas fa-times"></i>
        </button>
      </div>

      <form {{on "submit" this.handleSubmit}} class="avitar-modal__body">
        <div class="avitar-form-group">
          <label class="avitar-label" for="zone-name">Zone Name</label>
          <input
            id="zone-name"
            type="text"
            class="avitar-input"
            value={{this.zoneName}}
            {{on "input" this.updateZoneName}}
            required
            placeholder="e.g., Residential A"
          />
        </div>

        <div class="avitar-form-group">
          <label class="avitar-label" for="zone-description">Description</label>
          <input
            id="zone-description"
            type="text"
            class="avitar-input"
            value={{this.zoneDescription}}
            {{on "input" this.updateZoneDescription}}
            placeholder="e.g., Single-family residential"
          />
        </div>

        <div class="avitar-grid avitar-grid-cols-1 md:avitar-grid-cols-2 avitar-gap-4">
          <div class="avitar-form-group">
            <label class="avitar-label" for="min-acreage">Minimum Acreage</label>
            <div class="avitar-input-group">
              <input
                id="min-acreage"
                type="number"
                step="0.01"
                min="0"
                class="avitar-input"
                value={{this.minimumAcreage}}
                {{on "input" this.updateMinimumAcreage}}
                required
                placeholder="0.25"
              />
              <span class="avitar-input-group__addon">acres</span>
            </div>
          </div>

          <div class="avitar-form-group">
            <label class="avitar-label" for="min-frontage">Minimum Frontage</label>
            <div class="avitar-input-group">
              <input
                id="min-frontage"
                type="number"
                min="0"
                class="avitar-input"
                value={{this.minimumFrontage}}
                {{on "input" this.updateMinimumFrontage}}
                required
                placeholder="100"
              />
              <span class="avitar-input-group__addon">feet</span>
            </div>
          </div>
        </div>

        <div class="avitar-form-group">
          <label class="avitar-label" for="excess-land-cost">Excess Land Cost Per Acre</label>
          <div class="avitar-input-group">
            <span class="avitar-input-group__addon">$</span>
            <input
              id="excess-land-cost"
              type="number"
              step="0.01"
              min="0"
              class="avitar-input"
              value={{this.excessLandCostPerAcre}}
              {{on "input" this.updateExcessLandCostPerAcre}}
              placeholder="5000"
            />
            <span class="avitar-input-group__addon">per acre</span>
          </div>
        </div>

        <div class="avitar-modal__footer">
          <button type="button" class="avitar-btn avitar-btn--secondary" {{on "click" @onClose}}>
            Cancel
          </button>
          <button type="submit" class="avitar-btn avitar-btn--primary">
            {{if @zone.id "Update Zone" "Create Zone"}}
          </button>
        </div>
      </form>
    </div>
  </div>
{{/if}}