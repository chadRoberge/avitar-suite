{{!-- Assessing Settings Menu Component --}}
<nav class="avitar-sidebar avitar-sidebar--open avitar-sidebar--with-topbar" style="top: 120px">
  <div class="avitar-sidebar__header">
    <h2 class="avitar-sidebar__title">Assessing Settings</h2>
    <div class="avitar-sidebar__subtitle">Configure assessing functions</div>
  </div>

  <div class="avitar-sidebar__nav">
    <ul class="avitar-sidebar__nav-list">
      <li class="avitar-sidebar__nav-item">
        <LinkTo 
          @route="municipality.assessing.settings.general" 
          class="avitar-sidebar__nav-link"
          @activeClass="avitar-sidebar__nav-link--active"
        >
          <i class="fas fa-cog avitar-sidebar__nav-icon"></i>
          <span>General Settings</span>
        </LinkTo>
      </li>
      
      <li class="avitar-sidebar__nav-item">
        <LinkTo 
          @route="municipality.assessing.settings.current-use" 
          class="avitar-sidebar__nav-link"
          @activeClass="avitar-sidebar__nav-link--active"
        >
          <i class="fas fa-tags avitar-sidebar__nav-icon"></i>
          <span>Current Use</span>
        </LinkTo>
      </li>
      
      <li class="avitar-sidebar__nav-item">
        <LinkTo 
          @route="municipality.assessing.settings.neighborhoods" 
          class="avitar-sidebar__nav-link"
          @activeClass="avitar-sidebar__nav-link--active"
        >
          <i class="fas fa-map-marked-alt avitar-sidebar__nav-icon"></i>
          <span>Land Details</span>
        </LinkTo>
      </li>
      
      <li class="avitar-sidebar__nav-item">
        <LinkTo 
          @route="municipality.assessing.settings.land-details" 
          class="avitar-sidebar__nav-link"
          @activeClass="avitar-sidebar__nav-link--active"
        >
          <i class="fas fa-mountain avitar-sidebar__nav-icon"></i>
          <span>Zone & Land Curves</span>
        </LinkTo>
      </li>
      
      <li class="avitar-sidebar__nav-item">
        <LinkTo 
          @route="municipality.assessing.settings.building-details" 
          class="avitar-sidebar__nav-link"
          @activeClass="avitar-sidebar__nav-link--active"
        >
          <i class="fas fa-building avitar-sidebar__nav-icon"></i>
          <span>Building Details</span>
        </LinkTo>
      </li>
      
      <li class="avitar-sidebar__nav-item">
        <LinkTo 
          @route="municipality.assessing.settings.feature-details" 
          class="avitar-sidebar__nav-link"
          @activeClass="avitar-sidebar__nav-link--active"
        >
          <i class="fas fa-list-ul avitar-sidebar__nav-icon"></i>
          <span>Feature Details</span>
        </LinkTo>
      </li>
      
      <li class="avitar-sidebar__nav-item">
        <LinkTo 
          @route="municipality.assessing.settings.view" 
          class="avitar-sidebar__nav-link"
          @activeClass="avitar-sidebar__nav-link--active"
        >
          <i class="fas fa-eye avitar-sidebar__nav-icon"></i>
          <span>View Attributes</span>
        </LinkTo>
      </li>
      
      <li class="avitar-sidebar__nav-item">
        <LinkTo 
          @route="municipality.assessing.settings.waterfront" 
          class="avitar-sidebar__nav-link"
          @activeClass="avitar-sidebar__nav-link--active"
        >
          <i class="fas fa-water avitar-sidebar__nav-icon"></i>
          <span>Waterfront Settings</span>
        </LinkTo>
      </li>
      
      <li class="avitar-sidebar__nav-item">
        <LinkTo
          @route="municipality.assessing.settings.exemptions-credits"
          class="avitar-sidebar__nav-link"
          @activeClass="avitar-sidebar__nav-link--active"
        >
          <i class="fas fa-percent avitar-sidebar__nav-icon"></i>
          <span>Exemptions & Credits</span>
        </LinkTo>
      </li>

      <li class="avitar-sidebar__nav-item">
        <LinkTo
          @route="municipality.assessing.settings.import"
          class="avitar-sidebar__nav-link"
          @activeClass="avitar-sidebar__nav-link--active"
        >
          <i class="fas fa-file-import avitar-sidebar__nav-icon"></i>
          <span>Data Import</span>
        </LinkTo>
      </li>

      {{! Advanced Dropdown }}
      <li class="avitar-sidebar__nav-item avitar-sidebar__nav-item--dropdown">
        <button
          type="button"
          class="avitar-sidebar__nav-link avitar-sidebar__nav-link--dropdown"
          {{on "click" this.toggleAdvancedDropdown}}
        >
          <i class="fas fa-flask avitar-sidebar__nav-icon"></i>
          <span>Advanced</span>
          <i class="fas fa-chevron-{{if this.showAdvancedDropdown 'up' 'down'}} avitar-sidebar__nav-dropdown-icon"></i>
        </button>

        {{#if this.showAdvancedDropdown}}
          <ul class="avitar-sidebar__nav-submenu">
            <li class="avitar-sidebar__nav-item">
              <LinkTo
                @route="municipality.assessing.reports"
                class="avitar-sidebar__nav-link avitar-sidebar__nav-link--submenu"
                @activeClass="avitar-sidebar__nav-link--active"
                {{on "click" this.closeAdvancedDropdown}}
              >
                <i class="fas fa-file-alt avitar-sidebar__nav-icon"></i>
                <span>Reports</span>
              </LinkTo>
            </li>

            <li class="avitar-sidebar__nav-item">
              <LinkTo
                @route="municipality.assessing.revaluation"
                class="avitar-sidebar__nav-link avitar-sidebar__nav-link--submenu"
                @activeClass="avitar-sidebar__nav-link--active"
                {{on "click" this.closeAdvancedDropdown}}
              >
                <i class="fas fa-chart-line avitar-sidebar__nav-icon"></i>
                <span>Revaluation</span>
              </LinkTo>
            </li>
          </ul>
        {{/if}}
      </li>
    </ul>
  </div>
</nav>