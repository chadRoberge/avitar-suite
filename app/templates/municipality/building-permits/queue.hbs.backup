{{page-title "Permits Queue"}}

{{#if @model.accessDenied}}
  <Shared::AccessDenied
    @moduleName={{@model.moduleName}}
    @requiredPermission={{@model.requiredPermission}}
    @canRequestAccess={{true}}
    @showContactInfo={{true}}
  />
{{else}}
  <div class="avitar-page-header">
    <div class="avitar-page-header__content">
      <h1 class="avitar-page-header__title">
        <i class="fas fa-clipboard-list avitar-mr-2"></i>
        Permits Queue
      </h1>
      <p class="avitar-page-header__subtitle">
        Review and manage permit applications
      </p>
    </div>

    <div class="avitar-page-header__actions">
      <button
        type="button"
        class="avitar-btn avitar-btn--secondary avitar-mr-2"
        {{on "click" this.refreshQueue}}
      >
        <i class="fas fa-sync-alt avitar-mr-2"></i>
        Refresh
      </button>

      <button
        type="button"
        class="avitar-btn avitar-btn--primary"
        {{on "click" this.createNewPermit}}
      >
        <i class="fas fa-plus avitar-mr-2"></i>
        New Permit
      </button>
    </div>
  </div>

  {{! Stats Cards }}
  <div class="avitar-grid avitar-grid--4 avitar-mb-4">
    <div class="avitar-card avitar-card--stat">
      <div class="avitar-card__body">
        <div class="avitar-stat">
          <div class="avitar-stat__label">Submitted</div>
          <div class="avitar-stat__value avitar-text-primary">{{this.stats.submitted}}</div>
        </div>
      </div>
    </div>

    <div class="avitar-card avitar-card--stat">
      <div class="avitar-card__body">
        <div class="avitar-stat">
          <div class="avitar-stat__label">Under Review</div>
          <div class="avitar-stat__value avitar-text-info">{{this.stats.underReview}}</div>
        </div>
      </div>
    </div>

    <div class="avitar-card avitar-card--stat">
      <div class="avitar-card__body">
        <div class="avitar-stat">
          <div class="avitar-stat__label">On Hold</div>
          <div class="avitar-stat__value avitar-text-warning">{{this.stats.onHold}}</div>
        </div>
      </div>
    </div>

    <div class="avitar-card avitar-card--stat">
      <div class="avitar-card__body">
        <div class="avitar-stat">
          <div class="avitar-stat__label">Total in Queue</div>
          <div class="avitar-stat__value">{{this.stats.total}}</div>
        </div>
      </div>
    </div>
  </div>

  {{! Tabs and Filters }}
  <div class="avitar-card avitar-mb-4">
    <div class="avitar-card__header">
      <div class="avitar-tabs">
      <button
        type="button"
        class="avitar-tab {{if (eq this.selectedTab 'all') 'avitar-tab--active'}}"
        {{on "click" (fn this.selectTab "all")}}
      >
        All Permits
        <span class="avitar-badge avitar-badge--secondary avitar-ml-2">
          {{this.tabStats.all}}
        </span>
      </button>

      <button
        type="button"
        class="avitar-tab {{if (eq this.selectedTab 'myPermits') 'avitar-tab--active'}}"
        {{on "click" (fn this.selectTab "myPermits")}}
      >
        My Permits
        <span class="avitar-badge avitar-badge--primary avitar-ml-2">
          {{this.tabStats.myPermits}}
        </span>
      </button>

      <button
        type="button"
        class="avitar-tab {{if (eq this.selectedTab 'needingAttention') 'avitar-tab--active'}}"
        {{on "click" (fn this.selectTab "needingAttention")}}
      >
        <i class="fas fa-exclamation-triangle avitar-mr-1"></i>
        Needs Attention
        <span class="avitar-badge avitar-badge--warning avitar-ml-2">
          {{this.tabStats.needingAttention}}
        </span>
      </button>

      <button
        type="button"
        class="avitar-tab {{if (eq this.selectedTab 'expiringSoon') 'avitar-tab--active'}}"
        {{on "click" (fn this.selectTab "expiringSoon")}}
      >
        <i class="fas fa-clock avitar-mr-1"></i>
        Expiring Soon
        <span class="avitar-badge avitar-badge--danger avitar-ml-2">
          {{this.tabStats.expiringSoon}}
        </span>
      </button>
    </div>
  </div>

  <div class="avitar-card__body">
    {{! Filters }}
    <div class="avitar-filters avitar-mb-4">
      <div class="avitar-filter-group">
        <label class="avitar-label">Search</label>
        <input
          type="text"
          class="avitar-input"
          placeholder="Permit #, applicant, address..."
          value={{this.searchText}}
          {{on "input" this.updateSearch}}
        />
      </div>

      <div class="avitar-filter-group">
        <label class="avitar-label">Status</label>
        <select
          class="avitar-select"
          {{on "change" (fn this.setFilterStatus (pick "target.value"))}}
        >
          {{#each this.statusOptions as |option|}}
            <option value={{option.value}} selected={{eq this.filterStatus option.value}}>
              {{option.label}}
            </option>
          {{/each}}
        </select>
      </div>

      <div class="avitar-filter-group">
        <label class="avitar-label">Type</label>
        <select
          class="avitar-select"
          {{on "change" (fn this.setFilterType (pick "target.value"))}}
        >
          {{#each this.typeOptions as |option|}}
            <option value={{option.value}} selected={{eq this.filterType option.value}}>
              {{option.label}}
            </option>
          {{/each}}
        </select>
      </div>

      <div class="avitar-filter-group">
        <label class="avitar-label">Sort By</label>
        <select
          class="avitar-select"
          {{on "change" (fn this.setSortBy (pick "target.value"))}}
        >
          {{#each this.sortOptions as |option|}}
            <option value={{option.value}} selected={{eq this.sortBy option.value}}>
              {{option.label}}
            </option>
          {{/each}}
        </select>
      </div>

      {{#if this.hasFiltersApplied}}
        <div class="avitar-filter-group">
          <label class="avitar-label">&nbsp;</label>
          <button
            type="button"
            class="avitar-btn avitar-btn--secondary"
            {{on "click" this.clearFilters}}
          >
            <i class="fas fa-times avitar-mr-2"></i>
            Clear Filters
          </button>
        </div>
      {{/if}}
    </div>

    {{! Permits List }}
    {{#if this.displayedPermits.length}}
      <div class="avitar-table-container">
        <table class="avitar-table avitar-table--hover">
          <thead>
            <tr>
              <th>Priority</th>
              <th>Permit #</th>
              <th>Type</th>
              <th>Property</th>
              <th>Applicant</th>
              <th>Status</th>
              <th>Application Date</th>
              <th>Assigned To</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {{#each this.displayedPermits as |permit|}}
              <tr class="avitar-cursor-pointer" {{on "click" (fn this.viewPermit permit)}}>
                <td>
                  <select
                    class="avitar-select avitar-select--sm"
                    value={{permit.priorityLevel}}
                    {{on "change" (fn this.updatePriority permit (pick "target.value"))}}
                    {{on "click" (stop-propagation)}}
                  >
                    <option value="0">Normal</option>
                    <option value="1">Low</option>
                    <option value="2">Medium</option>
                    <option value="3">High</option>
                    <option value="4">Urgent</option>
                    <option value="5">Critical</option>
                  </select>
                  {{#if (gte permit.priorityLevel 3)}}
                    <i class="fas fa-exclamation-circle avitar-text-danger avitar-ml-1"></i>
                  {{/if}}
                </td>

                <td>
                  <strong>{{permit.permitNumber}}</strong>
                </td>

                <td>
                  <i class="fas fa-{{permit.typeIcon}} avitar-mr-1"></i>
                  {{permit.typeDisplay}}
                </td>

                <td>
                  <div class="avitar-text-sm">
                    <div class="avitar-font-medium">{{permit.pidFormatted}}</div>
                    <div class="avitar-text-muted">{{permit.propertyAddress}}</div>
                  </div>
                </td>

                <td>
                  <div class="avitar-text-sm">
                    <div>{{permit.applicant.name}}</div>
                    {{#if permit.applicant.email}}
                      <div class="avitar-text-muted">{{permit.applicant.email}}</div>
                    {{/if}}
                  </div>
                </td>

                <td>
                  <span class="{{permit.statusBadge.class}}">
                    {{permit.statusBadge.text}}
                  </span>
                </td>

                <td>
                  {{format-date permit.applicationDate "MMM DD, YYYY"}}
                </td>

                <td>
                  {{#if permit.assignedInspector}}
                    <div class="avitar-text-sm">
                      {{permit.assignedInspector.first_name}}
                      {{permit.assignedInspector.last_name}}
                    </div>
                  {{else}}
                    <span class="avitar-text-muted">Unassigned</span>
                  {{/if}}
                </td>

                <td {{on "click" (stop-propagation)}}>
                  <div class="avitar-btn-group">
                    <button
                      type="button"
                      class="avitar-btn avitar-btn--sm avitar-btn--secondary"
                      {{on "click" (fn this.viewPermit permit)}}
                      title="View Details"
                    >
                      <i class="fas fa-eye"></i>
                    </button>

                    <button
                      type="button"
                      class="avitar-btn avitar-btn--sm avitar-btn--secondary"
                      {{on "click" (fn this.editPermit permit)}}
                      title="Edit Permit"
                    >
                      <i class="fas fa-edit"></i>
                    </button>

                    {{#unless permit.assignedInspector}}
                      <button
                        type="button"
                        class="avitar-btn avitar-btn--sm avitar-btn--primary"
                        {{on "click" (fn this.assignToMe permit)}}
                        title="Assign to Me"
                      >
                        <i class="fas fa-user-check"></i>
                      </button>
                    {{/unless}}
                  </div>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    {{else}}
      <div class="avitar-empty-state">
        <i class="fas fa-inbox fa-3x avitar-text-muted avitar-mb-3"></i>
        <h3 class="avitar-mb-2">No Permits Found</h3>
        <p class="avitar-text-muted avitar-mb-4">
          {{#if this.hasFiltersApplied}}
            No permits match your current filters. Try adjusting your search criteria.
          {{else}}
            There are no permits in the queue at this time.
          {{/if}}
        </p>
        {{#if this.hasFiltersApplied}}
          <button
            type="button"
            class="avitar-btn avitar-btn--secondary"
            {{on "click" this.clearFilters}}
          >
            Clear Filters
          </button>
        {{else}}
          <button
            type="button"
            class="avitar-btn avitar-btn--primary"
            {{on "click" this.createNewPermit}}
          >
            <i class="fas fa-plus avitar-mr-2"></i>
            Create First Permit
          </button>
        {{/if}}
      </div>
    {{/if}}
  </div>
{{/if}}
