{{page-title "Motor Vehicle - " this.municipality.currentMunicipality.name}}

<div class="module-page">
  <div class="module-header">
    <h1>Motor Vehicle</h1>
    <p>Vehicle registrations and renewals</p>
  </div>

  <div class="module-content">
    <div class="stats-grid">
      <div class="stat-card">
        <h3>Registrations</h3>
        <div class="stat-value">{{this.model.registrations.length}}</div>
      </div>
      <div class="stat-card">
        <h3>Renewals</h3>
        <div class="stat-value">{{this.model.renewals.length}}</div>
      </div>
      <div class="stat-card">
        <h3>Inspections</h3>
        <div class="stat-value">{{this.model.inspections.length}}</div>
      </div>
    </div>

    <div class="module-placeholder">
      <i class="icon-truck"></i>
      <h3>Motor Vehicle Module</h3>
      <p>This module is under development. Full functionality will be available soon.</p>
    </div>
  </div>
</div>