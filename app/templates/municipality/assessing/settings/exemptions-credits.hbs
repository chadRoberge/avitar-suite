                class="avitar-form-input"
                rows="2"
                placeholder="Property tax exemption for elderly residents aged 80 and above"
                {{on "input" (fn this.updateElderlySettings "elderly80plusDescription")}}
                {{on "input" card.checkForChanges}}
              >{{this.elderlyExemptions.elderly80plusDescription}}</textarea>
