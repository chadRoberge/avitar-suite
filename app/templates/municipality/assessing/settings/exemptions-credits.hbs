                class="avitar-form-input"
                rows="2"
                placeholder="Property tax exemption for elderly residents aged 75-79"
                {{on "input" (fn this.updateElderlySettings "elderly7579Description")}}
                {{on "input" card.checkForChanges}}
              >{{this.elderlyExemptions.elderly7579Description}}</textarea>
            </div>
          </div>
        </div>

        {{!-- Ages 80+ Configuration --}}
        <div class="avitar-bg-gray-50 avitar-p-4 avitar-rounded">
          <h5 class="avitar-font-medium avitar-mb-3">Ages 80+ Exemption</h5>
