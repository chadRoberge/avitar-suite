{{!-- Exemptions & Credits Settings --}}
<div class="avitar-content">
  <div class="avitar-page-header">
    <h1 class="avitar-page-title">Exemptions & Credits</h1>
    <div class="avitar-page-subtitle">Configure tax exemptions and assessment credits</div>
  </div>

  {{!-- Elderly Exemptions --}}
  <Shared::SaveableCard
    @title="Elderly Exemptions"
    @subtitle="Assessment exemption amounts by age group and eligibility limits (deducted from assessed value)"
    @data={{this.elderlyExemptions}}
    @onSave={{this.saveElderlySettings}}
    @onReset={{this.resetElderlySettings}}
    as |card|
  >
    {{!-- Exemption Type Configuration --}}
    <div class="avitar-mb-6">
      <h4 class="avitar-font-semibold avitar-mb-4">Exemption Type Configuration</h4>
      <div class="avitar-grid avitar-grid-cols-1 md:avitar-grid-cols-3 avitar-gap-6 avitar-mb-6">
        {{!-- Ages 65-74 Configuration --}}
        <div class="avitar-bg-gray-50 avitar-p-4 avitar-rounded">
          <h5 class="avitar-font-medium avitar-mb-3">Ages 65-74 Exemption</h5>
          <div class="avitar-space-y-3">
            <div class="avitar-form-group">
              <label class="avitar-form-label" for="elderly-65-74-display-name">Display Name</label>
              <input
                type="text"
                id="elderly-65-74-display-name"
                class="avitar-form-input"
                placeholder="Elderly Exemption (65-74)"
                value={{this.elderlyExemptions.elderly6574DisplayName}}
                {{on "input" (fn this.updateElderlySettings "elderly6574DisplayName")}}
                {{on "input" card.checkForChanges}}
              />
            </div>
            <div class="avitar-form-group">
              <label class="avitar-form-label" for="elderly-65-74-description">Description</label>
              <textarea
                id="elderly-65-74-description"
                class="avitar-form-input"
                rows="2"
                placeholder="Property tax exemption for elderly residents aged 65-74"
                {{on "input" (fn this.updateElderlySettings "elderly6574Description")}}
                {{on "input" card.checkForChanges}}
              >{{this.elderlyExemptions.elderly6574Description}}</textarea>
            </div>
          </div>
        </div>

        {{!-- Ages 75-79 Configuration --}}
        <div class="avitar-bg-gray-50 avitar-p-4 avitar-rounded">
          <h5 class="avitar-font-medium avitar-mb-3">Ages 75-79 Exemption</h5>
          <div class="avitar-space-y-3">
