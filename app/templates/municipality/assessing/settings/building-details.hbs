          <h3 class="avitar-card__title">Sketch Sub Area Factors</h3>
          <div class="avitar-card__subtitle">Point-based factors for sketch sub areas with living space designation</div>
        </div>
        {{#unless (or this.isAddingSubAreaFactor this.isEditingSubAreaFactor)}}
        <button type="button" class="avitar-btn avitar-btn--primary" {{on "click" this.startAddingSubAreaFactor}}>
          <i class="fas fa-plus avitar-mr-2"></i>
          Add Sub Area Factor
        </button>
        {{/unless}}
      </div>
    </div>
    <div class="avitar-card__body">
      {{#if (or this.isAddingSubAreaFactor this.isEditingSubAreaFactor)}}
      <div class="avitar-bg-gray-50 avitar-p-4 avitar-rounded avitar-mb-4">
        <h4 class="avitar-font-semibold avitar-mb-3">
          {{if this.isEditingSubAreaFactor "Edit Sub Area Factor" "Add New Sub Area Factor"}}
        </h4>
        <div class="avitar-grid avitar-grid-cols-1 md:avitar-grid-cols-2 avitar-gap-4">
          <div class="avitar-form-group">
            <label class="avitar-label">Description</label>
            <input type="text" class="avitar-input" value={{this.newSubAreaDescription}} {{on "input" this.updateSubAreaDescription}} placeholder="e.g., Finished Basement" />
          </div>
          <div class="avitar-form-group">
            <label class="avitar-label">Display Text (15 chars max)</label>
            <input type="text" class="avitar-input" value={{this.newSubAreaDisplayText}} {{on "input" this.updateSubAreaDisplayText}} placeholder="e.g., FIN-BSMT" maxlength="15" />
          </div>
        </div>
        <div class="avitar-grid avitar-grid-cols-1 md:avitar-grid-cols-2 avitar-gap-4 avitar-mt-4">
          <div class="avitar-form-group">
            <label class="avitar-label">Points</label>
            <input type="number" class="avitar-input" value={{this.newSubAreaPoints}} {{on "input" this.updateSubAreaPoints}} step="1" min="-1000" max="1000" placeholder="e.g., 50" />
          </div>
          <div class="avitar-form-group">
            <label class="avitar-label">Living Space</label>
            <select class="avitar-select" value={{this.newSubAreaLivingSpace}} {{on "change" this.updateSubAreaLivingSpace}}>
              <option value="">Select living space...</option>
              <option value="true">Yes (Living Space)</option>
              <option value="false">No (Not Living Space)</option>
            </select>
          </div>
        </div>
        <div class="avitar-flex avitar-gap-2 avitar-mt-4">
          <button type="button" class="avitar-btn avitar-btn--primary" {{on "click" this.saveSubAreaFactor}}>
            {{if this.isEditingSubAreaFactor "Update Factor" "Save Factor"}}
          </button>
          <button type="button" class="avitar-btn avitar-btn--secondary" {{on "click" (if this.isEditingSubAreaFactor this.cancelEditingSubAreaFactor this.cancelAddingSubAreaFactor)}}>
            Cancel
          </button>
        </div>
      </div>
      {{/if}}
      {{#if this.reactiveSubAreaFactors.length}}
      <div class="avitar-table-container">
        <table class="avitar-table">
          <thead>
            <tr>
              <th>Display Text</th>
              <th>Description</th>
              <th>Points</th>
              <th>Living Space</th>
              <th class="avitar-table__actions-col">Actions</th>
            </tr>
          </thead>
          <tbody>
            {{#each this.reactiveSubAreaFactors as |factor|}}
            <tr>
              <td>
                <span class="avitar-badge avitar-badge--primary">{{factor.displayText}}</span>
              </td>
              <td>{{factor.description}}</td>
              <td>{{factor.points}}</td>
              <td>
                <span class="avitar-badge {{if factor.livingSpace 'avitar-badge--success' 'avitar-badge--secondary'}}">
                  {{if factor.livingSpace 'Yes' 'No'}}
                </span>
              </td>
              <td class="avitar-table__actions">
                <button type="button" class="avitar-btn avitar-btn--secondary avitar-btn--xs" {{on "click" (fn this.startEditingSubAreaFactor factor)}} title="Edit">
                  <i class="fas fa-edit"></i>
                </button>
                <button type="button" class="avitar-btn avitar-btn--danger avitar-btn--xs" {{on "click" (fn this.deleteSubAreaFactor factor)}} title="Delete">
                  <i class="fas fa-trash"></i>
                </button>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
      {{else}}
      <div class="avitar-empty-state avitar-text-center avitar-py-6">
        <i class="fas fa-th-large avitar-text-3xl avitar-text-muted avitar-mb-3"></i>
        <div class="avitar-font-semibold avitar-mb-2">No Sub Area Factors</div>
        <div class="avitar-text-muted avitar-mb-4">Add your first sketch sub area factor to get started</div>
        <button type="button" class="avitar-btn avitar-btn--primary" {{on "click" this.startAddingSubAreaFactor}}>
          <i class="fas fa-plus avitar-mr-2"></i>
          Add First Sub Area Factor
        </button>
      </div>
      {{/if}}
    </div>
  </div>
  {{!-- Guidelines Modal --}}
  {{#if this.showGuidelinesModal}}
  <div class="avitar-modal-overlay avitar-modal-overlay--visible" {{on "click" this.hideGuidelines}}>
    <div class="avitar-modal avitar-modal--lg" {{on "click" this.stopPropagation}}>
      <div class="avitar-modal__header">
        <h2 class="avitar-modal__title">Building Code Guidelines</h2>
        <button type="button" class="avitar-modal__close" {{on "click" this.hideGuidelines}}>
          <i class="fas fa-times"></i>
        </button>
      </div>
      <div class="avitar-modal__body">
        <div class="avitar-text-muted avitar-mb-6">Understanding building rate codes and classifications</div>
        <div class="avitar-grid avitar-grid-cols-1 md:avitar-grid-cols-2 avitar-gap-6">
          <div>
            <h4 class="avitar-font-semibold avitar-mb-3">Building Types</h4>
            <ul class="avitar-list avitar-text-sm avitar-space-y-2">
              <li><strong>Residential:</strong> Single-family homes, condos, apartments</li>
              <li><strong>Commercial:</strong> Offices, retail stores, restaurants</li>
              <li><strong>Industrial:</strong> Factories, warehouses, manufacturing</li>
              <li><strong>Manufactured:</strong> Mobile homes, prefabricated buildings</li>
              <li><strong>Utility:</strong> Power plants, substations, water facilities</li>
              <li><strong>Exempt:</strong> Churches, government, non-profit buildings</li>
            </ul>
          </div>
          <div>
            <h4 class="avitar-font-semibold avitar-mb-3">Code Structure</h4>
            <ul class="avitar-list avitar-text-sm avitar-space-y-2">
              <li>Codes must be exactly 3 letters (A-Z)</li>
              <li>Use descriptive abbreviations (SFR = Single Family Residential)</li>
              <li>Rates typically range from 0.5 to 2.0</li>
              <li>Size adjustment category usually matches building type</li>
              <li>Codes should be unique within each municipality</li>
            </ul>
          </div>
        </div>
        <div class="avitar-alert avitar-alert--info avitar-mt-6">
          <div class="avitar-alert__icon">
            <i class="fas fa-info-circle"></i>
          </div>
          <div class="avitar-alert__content">
            <div class="avitar-alert__title">Rate Examples</div>
            <div class="avitar-alert__message">
              Single Family Residential (SFR): Rate 1.0, Commercial Office (COF): Rate 1.2, Industrial Warehouse (IWH): Rate 0.8
            </div>
          </div>
        </div>
        <div class="avitar-mt-6">
          <h4 class="avitar-font-semibold avitar-mb-3">Feature Point System</h4>
          <ul class="avitar-list avitar-text-sm avitar-space-y-2">
            <li>Feature codes use a point system ranging from -1000 to +1000 points</li>
            <li>Points are applied to adjust the base building rate</li>
            <li>Higher quality features typically have positive points</li>
            <li>Lower quality or missing features may have negative points</li>
            <li>Display text should be short and descriptive (max 15 characters)</li>
          </ul>
        </div>
        <div class="avitar-mt-6">
          <h4 class="avitar-font-semibold avitar-mb-3">Sub Area Factors</h4>
          <ul class="avitar-list avitar-text-sm avitar-space-y-2">
            <li>Used for different types of sketch sub areas (basements, garages, etc.)</li>
            <li>Living space designation affects how areas are calculated</li>
            <li>Points are applied based on the type and quality of the sub area</li>
            <li>Living space areas typically have different valuation rates</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  {{/if}}

  {{!-- Feature Code Modal --}}
  {{#if (or this.isAddingFeatureCode this.isEditingFeatureCode)}}
  <div class="avitar-modal-overlay avitar-modal-overlay--visible" {{on "click" (if this.isEditingFeatureCode this.cancelEditingFeatureCode this.cancelAddingFeatureCode)}}>
    <div class="avitar-modal avitar-modal--md" {{on "click" this.stopPropagation}}>
      <div class="avitar-modal__header">
        <h2 class="avitar-modal__title">
          {{if this.isEditingFeatureCode "Edit Feature Code" "Add New Feature Code"}}
        </h2>
        <button type="button" class="avitar-modal__close" {{on "click" (if this.isEditingFeatureCode this.cancelEditingFeatureCode this.cancelAddingFeatureCode)}}>
          <i class="fas fa-times"></i>
        </button>
      </div>
      <div class="avitar-modal__body">
        <div class="avitar-grid avitar-grid-cols-1 md:avitar-grid-cols-2 avitar-gap-4">
          <div class="avitar-form-group">
            <label class="avitar-label">Feature Type</label>
            <select class="avitar-select" value={{this.newFeatureType}} {{on "change" this.updateFeatureType}} disabled={{or this.isEditingFeatureCode this.newFeatureType}}>
              <option value="">Select feature type...</option>
              {{#each this.featureTypes as |type|}}
              <option value={{type.value}} selected={{eq this.newFeatureType type.value}}>{{type.label}}</option>
              {{/each}}
            </select>
          </div>
          <div class="avitar-form-group">
            <label class="avitar-label">Description</label>
            <input type="text" class="avitar-input" value={{this.newFeatureDescription}} {{on "input" this.updateFeatureDescription}} placeholder="e.g., Drywall Standard" />
          </div>
        </div>
        <div class="avitar-grid avitar-grid-cols-1 md:avitar-grid-cols-2 avitar-gap-4 avitar-mt-4">
          <div class="avitar-form-group">
            <label class="avitar-label">Display Text (15 chars max)</label>
            <input type="text" class="avitar-input" value={{this.newFeatureDisplayText}} {{on "input" this.updateFeatureDisplayText}} placeholder="e.g., DRY-STD" maxlength="15" />
          </div>
          <div class="avitar-form-group">
            <label class="avitar-label">Points</label>
            <input type="number" class="avitar-input" value={{this.newFeaturePoints}} {{on "input" this.updateFeaturePoints}} step="1" min="-1000" max="1000" placeholder="e.g., 25" />
          </div>
        </div>
      </div>
      <div class="avitar-modal__footer">
        <button type="button" class="avitar-btn avitar-btn--secondary" {{on "click" (if this.isEditingFeatureCode this.cancelEditingFeatureCode this.cancelAddingFeatureCode)}}>
          Cancel
        </button>
        <button type="button" class="avitar-btn avitar-btn--primary" {{on "click" this.saveFeatureCode}}>
          {{if this.isEditingFeatureCode "Update Code" "Save Code"}}
        </button>
      </div>
    </div>
  </div>
  {{/if}}
</div>