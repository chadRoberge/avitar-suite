{{!-- Building Details Settings --}}
<div class="avitar-content">
  <div class="avitar-page-header">
    <div class="avitar-flex avitar-flex-row avitar-justify-between avitar-items-center avitar-mb-2">
      <div class="avitar-flex-5">
        <h1 class="avitar-page-title avitar-skinny">Building Details</h1>
        <div class="avitar-page-subtitle">Configure building rate codes and classification settings</div>
      </div>
      <div class="avitar-flex-5 avitar-flex avitar-justify-end">
        <button type="button" class="avitar-btn avitar-btn--outline avitar-btn--sm" {{on "click" this.showGuidelines}} title="Show Guidelines">
          <i class="fas fa-question-circle"></i>
          Guidelines
        </button>
      </div>
    </div>
  </div>
  {{!-- Building Rate Codes Section --}}
  <div class="avitar-card avitar-mb-6">
    <div class="avitar-card__header avitar-card__header--colored">
      <div class="avitar-flex avitar-justify-between avitar-items-center">
        <div>
          <h3 class="avitar-card__title">Building Rate Codes</h3>
          <div class="avitar-card__subtitle">3-letter codes with descriptions, rates, and building type classifications</div>
        </div>
        {{#unless (or this.isAddingBuildingCode this.isEditingBuildingCode)}}
        <button type="button" class="avitar-btn avitar-btn--primary" {{on "click" this.startAddingBuildingCode}}>
          <i class="fas fa-plus avitar-mr-2"></i>
          Add Building Code
        </button>
        {{/unless}}
      </div>
    </div>
    <div class="avitar-card__body">
      {{#if (or this.isAddingBuildingCode this.isEditingBuildingCode)}}
      <div class="avitar-bg-gray-50 avitar-p-4 avitar-rounded avitar-mb-4">
        <h4 class="avitar-font-semibold avitar-mb-3">
          {{if this.isEditingBuildingCode "Edit Building Code" "Add New Building Code"}}
        </h4>
        <div class="avitar-grid avitar-grid-cols-1 md:avitar-grid-cols-2 lg:avitar-grid-cols-3 avitar-gap-4">
          <div class="avitar-form-group">
            <label class="avitar-label">Description</label>
            <input type="text" class="avitar-input" value={{this.newBuildingDescription}} {{on "input" this.updateBuildingDescription}} placeholder="e.g., Single Family Residential" />
          </div>
          <div class="avitar-form-group">
            <label class="avitar-label">Code (3 letters)</label>
            <input type="text" class="avitar-input" value={{this.newBuildingCode}} {{on "input" this.updateBuildingCode}} placeholder="e.g., SFR" maxlength="3" />
          </div>
          <div class="avitar-form-group">
            <label class="avitar-label">Rate</label>
            <input type="number" class="avitar-input" value={{this.newBuildingRate}} {{on "input" this.updateBuildingRate}} step="0.01" placeholder="1.0" />
          </div>
        </div>
        <div class="avitar-grid avitar-grid-cols-1 md:avitar-grid-cols-3 avitar-gap-4 avitar-mt-4">
          <div class="avitar-form-group">
            <label class="avitar-label">Building Type</label>
            <select class="avitar-select" value={{this.newBuildingType}} {{on "change" this.updateBuildingType}}>
              <option value="">Select building type...</option>
              {{#each this.buildingTypes as |type|}}
              <option value={{type.value}}>{{type.label}}</option>
              {{/each}}
            </select>
          </div>
          <div class="avitar-form-group">
            <label class="avitar-label">Size Adjustment Category</label>
            <select class="avitar-select" value={{this.newSizeAdjustmentCategory}} {{on "change" this.updateSizeAdjustmentCategory}}>
              <option value="">Select category...</option>
              {{#each this.buildingTypes as |type|}}
              <option value={{type.value}}>{{type.label}}</option>
              {{/each}}
            </select>
          </div>
          <div class="avitar-form-group">
            <label class="avitar-label">Depreciation (%)</label>
            <input type="number" class="avitar-input" value={{this.newBuildingDepreciation}} {{on "input" this.updateBuildingDepreciation}} step="0.1" min="0" max="100" placeholder="e.g., 15.5" />
          </div>
        </div>
        <div class="avitar-flex avitar-gap-2 avitar-mt-4">
          <button type="button" class="avitar-btn avitar-btn--primary" {{on "click" this.saveBuildingCode}}>
            {{if this.isEditingBuildingCode "Update Code" "Save Code"}}
          </button>
          <button type="button" class="avitar-btn avitar-btn--secondary" {{on "click" (if this.isEditingBuildingCode this.cancelEditingBuildingCode this.cancelAddingBuildingCode)}}>
            Cancel
          </button>
        </div>
      </div>
      {{/if}}
      {{#if this.reactiveBuildingCodes.length}}
      <div class="avitar-table-container">
        <table class="avitar-table">
          <thead>
            <tr>
              <th>Code</th>
              <th>Description</th>
              <th>Rate</th>
              <th>Building Type</th>
              <th>Size Adjustment Category</th>
              <th>Depreciation (%)</th>
              <th class="avitar-table__actions-col">Actions</th>
            </tr>
          </thead>
          <tbody>
            {{#each this.reactiveBuildingCodes as |code|}}
            <tr>
              <td>
                <span class="avitar-badge avitar-badge--primary">{{code.code}}</span>
              </td>
              <td>{{code.description}}</td>
              <td>{{code.rate}}</td>
              <td>
                <span class="avitar-badge avitar-badge--secondary">{{capitalize code.buildingType}}</span>
              </td>
              <td>
                <span class="avitar-badge avitar-badge--outline">{{capitalize code.sizeAdjustmentCategory}}</span>
              </td>
              <td>{{code.depreciation}}%</td>
              <td class="avitar-table__actions">
                <button type="button" class="avitar-btn avitar-btn--secondary avitar-btn--xs" {{on "click" (fn this.startEditingBuildingCode code)}} title="Edit">
                  <i class="fas fa-edit"></i>
                </button>
                <button type="button" class="avitar-btn avitar-btn--danger avitar-btn--xs" {{on "click" (fn this.deleteBuildingCode code)}} title="Delete">
                  <i class="fas fa-trash"></i>
                </button>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
      {{else}}
      <div class="avitar-empty-state avitar-text-center avitar-py-6">
        <i class="fas fa-building avitar-text-3xl avitar-text-muted avitar-mb-3"></i>
        <div class="avitar-font-semibold avitar-mb-2">No Building Codes</div>
        <div class="avitar-text-muted avitar-mb-4">Add your first building code to get started</div>
