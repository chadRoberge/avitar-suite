{{page-title "Utility Billing - " this.municipality.currentMunicipality.name}}

<div class="module-page">
  <div class="module-header">
    <h1>Utility Billing</h1>
    <p>Water and sewer billing</p>
  </div>

  <div class="module-content">
    <div class="stats-grid">
      <div class="stat-card">
        <h3>Bills</h3>
        <div class="stat-value">{{this.model.bills.length}}</div>
      </div>
      <div class="stat-card">
        <h3>Customers</h3>
        <div class="stat-value">{{this.model.customers.length}}</div>
      </div>
      <div class="stat-card">
        <h3>Meters</h3>
        <div class="stat-value">{{this.model.meters.length}}</div>
      </div>
    </div>

    <div class="module-placeholder">
      <i class="icon-droplet"></i>
      <h3>Utility Billing Module</h3>
      <p>This module is under development. Full functionality will be available soon.</p>
    </div>
  </div>
</div>